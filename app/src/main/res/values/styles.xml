<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.App.Tooltip" parent="Widget.Material3.Tooltip">
        <item name="android:textAppearance">@style/LabelSmall</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="IconButtonCommon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/icon_button</item>
    </style>

    <style name="IconButton" parent="IconButtonCommon">
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="DisplayLarge" parent="">
        <item name="android:textSize">57sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="DisplayMedium" parent="">
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="DisplaySmall" parent="">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="HeadlineLarge" parent="">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="HeadlineMedium" parent="">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="HeadlineSmall" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="TitleLarge" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="TitleMedium" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="TitleSmall" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
    </style>

    <style name="LabelProminent" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pptelegraf_semibold</item>
    </style>

    <style name="LabelLarge" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pptelegraf_medium</item>
    </style>

    <style name="LabelMedium" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pptelegraf_medium</item>
    </style>

    <style name="LabelSmall" parent="">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/pptelegraf_medium</item>
    </style>

    <style name="BodyLarge" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pptelegraf_medium</item>
    </style>

    <style name="BodyMedium" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pptelegraf_medium</item>
    </style>

    <style name="BodySmall" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pptelegraf_medium</item>
    </style>

    <style name="BottomNavigationTextViewStyle">
        <item name="fontFamily">@font/pptelegraf_medium</item>
    </style>

    <style name="ButtonTextCustomStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">@font/pptelegraf_medium</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ButtonIconCustomStyle">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ItemSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:textColor">@color/item_size_text_colour_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Material3.Chip.Filter.Text" parent="Widget.Material3.Chip.Filter">
        <item name="android:textAppearance">@style/LabelSmall</item>
    </style>
</resources>